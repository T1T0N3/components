{
  "swagger": "2.0",
  "info": {
    "title": "SharePoint Item Count (Swagger 2.0)",
    "version": "1.0.0",
    "description": "Recupera il conteggio totale degli elementi di una lista SharePoint utilizzando odata=nometadata."
  },
  "host": "mapeigroup.sharepoint.com",
  "basePath": "/sites/un-giorno-per-gli-altri-dev",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/_api/web/Lists/getbytitle('{listTitle}')/ItemCount": {
      "get": {
        "summary": "Ottieni Conteggio Totale Lista",
        "operationId": "GetTotalItemCount",
        "parameters": [
          {
            "name": "listTitle",
            "in": "path",
            "description": "Il titolo della lista SharePoint. Assicurarsi che K2 gestisca gli apici singoli nel path.",
            "required": true,
            "type": "string"
          },
          {
            "name": "$format",
            "in": "query",
            "description": "Forza la risposta odata=nometadata per ottenere un Integer diretto.",
            "required": true,
            "type": "string",
            "default": "application/json;odata=nometadata"
          }
        ],
        "responses": {
          "200": {
            "description": "Conteggio totale (risposta Integer diretta).",
            "schema": {
              "type": "integer",
              "format": "int32",
              "example": 42
            }
          }
        }
      }
    }
  }
}
