{
  "swagger": "2.0",
  "info": {
    "title": "SharePoint Item Count (Final JSON)",
    "version": "1.0.0",
    "description": "Recupera il conteggio forzando la risposta JSON tramite header Accept."
  },
  "host": "mapeigroup.sharepoint.com",
  "basePath": "/sites/un-giorno-per-gli-altri-dev",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/_api/web/Lists/getbytitle('{listTitle}')/ItemCount": {
      "get": {
        "summary": "Ottieni Conteggio Totale Lista",
        "operationId": "GetTotalItemCount",
        "parameters": [
          {
            "name": "listTitle",
            "in": "path",
            "description": "Il titolo della lista SharePoint.",
            "required": true,
            "type": "string"
          },
          {
            "name": "Accept",
            "in": "header",
            "description": "Forza il formato di risposta JSON per garantire la corretta deserializzazione.",
            "required": true,
            "type": "string",
            "default": "application/json;odata=verbose"
          }
        ],
        "responses": {
          "200": {
            "description": "Risposta JSON con conteggio.",
            "schema": {
              "type": "object",
              "properties": {
                "d": {
                  "type": "object",
                  "properties": {
                    "ItemCount": {
                      "type": "integer",
                      "format": "int32",
                      "example": 110
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
