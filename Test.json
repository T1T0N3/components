{
  "openapi": "3.0.3",
  "info": {
    "title": "SharePoint List API",
    "version": "1.0.0",
    "description": "REST API per recuperare informazioni da una lista SharePoint"
  },
  "servers": [
    {
      "url": "https://mapeigroup.sharepoint.com/sites/un-giorno-per-gli-altri-dev"
    }
  ],
  "paths": {
  "/_api/web/Lists/getbytitle('{listTitle}')/ItemCount?$format=application/json;odata=nometadata": {
    "get": {
      "summary": "Ottieni ItemCount senza metadata",
      "parameters": [
        {
          "name": "listTitle",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string",
            "example": "Elenco dei Volontari"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ItemCount": {
                    "type": "integer",
                    "example": 42
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
}
