{
  "openapi": "3.0.3",
  "info": {
    "title": "SharePoint Item Count (Base)",
    "version": "1.0.0",
    "description": "Recupera il conteggio totale degli elementi di una lista SharePoint tramite ItemCount endpoint."
  },
  "servers": [
    {
      "url": "https://mapeigroup.sharepoint.com/sites/un-giorno-per-gli-altri-dev"
    }
  ],
  "paths": {
    "/_api/web/Lists/getbytitle('{listTitle}')/ItemCount": {
      "get": {
        "summary": "Ottieni Conteggio Totale Lista",
        "operationId": "GetTotalItemCount",
        "parameters": [
          {
            "name": "listTitle",
            "in": "path",
            "description": "Il titolo della lista SharePoint. Assicurarsi che K2 gestisca gli apici singoli nel path.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Elenco dei Volontari"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conteggio totale della lista. La risposta JSON include l'oggetto 'd' con la propriet√† 'ItemCount'.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "d": {
                      "type": "object",
                      "properties": {
                        "ItemCount": {
                          "type": "integer",
                          "description": "Il valore numerico del conteggio.",
                          "example": 42
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
