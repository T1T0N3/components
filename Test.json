{
  "swagger": "2.0",
  "info": {
    "title": "SharePoint Volontari Service",
    "version": "1.0.0"
  },
  "host": "mapeigroup.sharepoint.com",
  "basePath": "/sites/un-giorno-per-gli-altri-dev/_api",
  "schemes": ["https"],
  "paths": {
    "/web/Lists/getbytitle('Elenco dei Volontari')/Items": {
      "get": {
        "summary": "Recupera gli ID dei volontari per Evento e Stato di Iscrizione",
        "operationId": "GetVolontariFiltrati",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "$filter",
            "in": "query",
            "description": "Filtro OData per IDEvento e StatoIscrizione. Esempio: IDEvento eq 53 and StatoIscrizione eq 'Iscritto'",
            "required": true,
            "type": "string"
          },
          {
            "name": "$select",
            "in": "query",
            "description": "Campi da selezionare (es. ID). Lascia come '$select=ID' per il conteggio.",
            "required": false,
            "type": "string",
            "default": "ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista di oggetti con gli ID dei volontari.",
            "schema": {
              "type": "object",
              "properties": {
                "d": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "ID": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
